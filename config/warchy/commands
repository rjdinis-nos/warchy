# Warchy Quick Commands
# Format: command # category # description
# Empty lines will be ignored
# Lines starting with # are comments and will be ignored

git log --oneline --graph -20 # git # Git history graph (last 20)
git status -sb # git # Short git status with branch
git diff --staged # git # Show staged changes
git branch -vv # git # List branches with tracking info
git fetch --unshallow # git # Git fetch all history from remote

cloc $PWD # code # Count Lines of Code per language type 

ss -tulpn # network # Show listening ports
gum style "IP" --border="rounded";ip -br a;gum style "Route" --border="rounded";ip -c route;gum style "DNS" --border="rounded";resolvectl # network # Network information
ping -c 4 1.1.1.1 # network # Test connectivity to Cloudflare DNS
curl -Is https://google.com | bat -Pp # network # Check HTTP headers
curl -s ipinfo.io | jq # network # Show public IP

duf # disk # Disk usage 
dust -r -X /mnt # disk # Directory sizes
dua -i /mnt i # disk # Directory sizes
findmnt # disk # Filesystem tree 

uname -a # system # Kernel information
lsb_release -a # system # Distribution information

paru -Syu # package # Update all packages
paru -Ss # package # Search for package
pacman -Qe # package # List explicitly installed packages
pacman -Qdtq # package # List orphaned packages
pacman -Qdtq | pacman -Qi - || true; # package # List orphan packages info
pacman -Qdtq | sudo pacman -Rns - # package # Clean orphan packages

fd -H -t f # file # Find all files (including hidden)
fzf --preview "bat --style=numbers --color=always {} --line-range :100" # file # fuzzy find with preview 

ssh -T git@github.com # security # SSH check GitHub
gpg --list-secret-keys --keyid-format=long # security # Gpg list keys
echo "test" | gpg --clearsign | gpg --verify # security # Gpg key check
echo "This is a test message." | gpg --pinentry-mode loopback --clearsign # security # Gpg check agent

systemd-analyze blame # logs # boot time
dmesg -l err,warn # logs # dmesg errors and warnings
journalctl -b 0 -p warning --no-pager # logs # Journal boot errors and warnings
journalctl --disk-usage # logs # Journal usage size
find /run/log/journal/ -type f -name "*.journal*" -printf '%TY-%Tm-%Td %TH:%TM\t%s\t%p\n' | numfmt --field=3 --to=iec --suffix=B --padding=8; find /var/log/journal/ -type f -name "*.journal*" -printf '%TY-%Tm-%Td %TH:%TM\t%s\t%p\n' | numfmt --field=3 --to=iec --suffix=B --padding=8; # logs # List journal files
journalctl -r --since '12 hour ago' --no-pager| tspin # logs # List journal since 12 hours ago

rg --hidden --no-ignore 'BEGIN (RSA|DSA|EC|OPENSSH) PRIVATE KEY' # security # Search private keys and certificates
rg -i --hidden --no-ignore '(password\s*=|secret\s*=|token\s*=|api[_-]?key\s*=)' # security # Search credentials and secrets
bind -X # shell # List key sequences bound with -x 
